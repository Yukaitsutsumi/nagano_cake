<h1>商品編集</h1>

<%= form_with model:@item, url:admin_item_path(@item.id), local:true do |f| %>
  <%= f.label :"商品画像" %>
  <%= f.attachment_field :image %></br>

  <%= f.label :"商品名" %>
  <%= f.text_field :name %></br>

  <%= f.label :"商品説明" %>
  <%= f.text_area :introduction %></br>

  <%= f.label :"ジャンル" %>
  <%= f.select :genre_id, Genre.all.map { |genre| [genre.name, genre.id] } %></br>

  <%= f.label :"税抜価格" %>
  <%= f.text_field :price %>円</br>

  <%= f.radio_button :is_active, :true %>
  <%= f.label :is_active, "販売中" %>
  <%= f.radio_button :is_active, :false %>
  <%= f.label :is_active, "販売停止中" %><br />


  <%= f.submit '変更を保存' %>
<% end %>