<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <h3>商品一覧ページ</h3>

      <table class="table table-borderless">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= item.name %></td>
          <td><%= item.price %></td>
          <td><%= item.genre_id %></td>
          <td><%= item.is_active %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>