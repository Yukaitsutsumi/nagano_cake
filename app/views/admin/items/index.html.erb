<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <h3>商品一覧</h3>
      <%= link_to new_admin_item_path do %>ああ<% end %>

      <table class="table table-borderless">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to admin_item_path(item.id) do %><%= item.name %><% end %></td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <td><%= item.is_active_i18n %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>