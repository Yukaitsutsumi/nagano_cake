<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <h3>注文履歴一覧</h3>

      <table class="table table-borderless">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at %></td>
          <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
          <td>
            <% order.order_details.each do |detail| %>
              <%= detail.amount %>
            <% end %>
          </td>
          <td><%= order.status_i18n %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>