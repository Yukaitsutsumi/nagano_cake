<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <h3>会員一覧</h3>

      <table class="table" border="1">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
        <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to admin_customer_path(customer.id) do %><%= customer.last_name %><%= customer.first_name %><% end %></td>
          <td><%= customer.email %></td>
          <td><%= customer.is_active_i18n %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>