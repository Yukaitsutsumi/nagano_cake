<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <h3>配送先編集</h3>

      <table class="table table-borderless">
      <%= form_with model:@edit_address, url:public_address_path, local:true do |f| %>
      <%= f.hidden_field :customer_id, :value => @customer.id %>
        <tr>
          <td><%= f.label :"郵便番号（ハイフンなし）" %></td>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <td><%= f.label :"住所" %></td>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <td><%= f.label :"宛名" %></td>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit '変更内容を保存' %></td>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>