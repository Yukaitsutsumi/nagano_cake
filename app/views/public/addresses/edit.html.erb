<h3>配送先編集</h3>
<%= form_with model:@edit_address, url:public_address_path, local:true do |f| %>

  <%= f.hidden_field :customer_id, :value => @customer.id %>

  <%= f.label :"郵便番号（ハイフンなし）" %>
  <%= f.text_field :postal_code %>

  <%= f.label :"住所" %>
  <%= f.text_field :address %>

  <%= f.label :"宛名" %>
  <%= f.text_field :name %>

  <%= f.submit '変更内容を保存' %>
<% end %>