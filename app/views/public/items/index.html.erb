<div class="container">
  <div class="row">
    <div class="col-lg-3">
      ジャンル検索
    </div>
    <div class="col-lg-8">
      <h3><strong>商品一覧(全XX件)</strong></h3>
      <div class="item-box">
        <% @items.each do |item| %>
          <div class="itembox-content">
            <%= attachment_image_tag item, :image, :fill, 100, 100, format: 'jpeg' %></br>
            <%= link_to show_item_path(item.id) do %><%= item.name %><% end %></br>
            ￥<%= item.price %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>