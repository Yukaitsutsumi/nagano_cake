<h3>注文履歴一覧</h3>
<% @orders.each do |order| %>
<div>
  <p>注文日：<%= order.created_at %></p>
  <p>発送先：〒<%= order.postal_code %> <%= order.address %> <%= order.name %></p>
  <p>注文商品：
  <% order.order_details.each do |detail| %>
  <%= detail.item.name %>
  <% end %></p>
  <p>支払金額：<%= order.total_payment %></p>
  <p>ステータス：<%= order.status_i18n %></p>
  <p>注文詳細：<%= link_to "表示する", show_order_path(order.id) %></p>
</div>
<% end %>