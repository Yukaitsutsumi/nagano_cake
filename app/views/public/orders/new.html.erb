<h3>注文情報入力</h3>
<h4>支払方法</h4>
<%= form_with model:@order, url:orders_confirm_path, local:true do |f| %>
<%= f.radio_button :payment_method, "credit_card" %>
<%= f.label :payment_method, "クレジットカード" %>

<%= f.radio_button :payment_method, "transfer" %>
<%= f.label :payment_method, "銀行振込" %>



<h4>お届け先</h4>

<%= f.radio_button :select_address, "customer_address" %>
<%= f.label :select_address, "ご自身の住所" %></br>

<%= f.radio_button :select_address, "select_address" %>
<%= f.label :select_address, "登録済住所から選択" %>
<%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :full_address) %></br>

<%= f.radio_button :select_address, "new_address" %>
<%= f.label :select_address, "新しいお届け先" %></br>
  <%= f.label :"郵便番号（ハイフンなし）" %>
  <%= f.text_field :postal_code %></br>
  <%= f.label :"住所" %>
  <%= f.text_field :address %></br>
  <%= f.label :"宛名" %>
  <%= f.text_field :name %></br>

<%= f.submit '確認画面に進む' %>
<% end %>