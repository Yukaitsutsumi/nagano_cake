<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <table class="table table-borderless" width= "500px">
        <td>ショッピングカート</td>
        <td align="left"><%= link_to "カートを空にする", cart_items_destroy_all_path(@cart_items), method: :delete %></td>
      </table>

      <table class="table" border="1">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        <% @sum = 0 %>
        <% @cart_items.each do |cart_item| %>
          </tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td>
              <%= form_with model:cart_item, url:cart_item_path(@cart_items), local:true do |f| %>
                <%= f.select :amount, *[1..10] %>
                <%= f.submit '変更' %>
              <% end %>
            </td>
            <!--<td><%#= cart_item.amount %></td>-->
            <td><%= cart_item.subtotal %><% @sum +=  cart_item.subtotal %></td>
            <td><%= link_to "削除", destroy_cart_item_path(@cart_items.ids), method: :delete %></td>
          </tr>

        <% end %>
      </table>

      <table class="table table-borderless">
        <tr>
          <td><%= link_to "買い物を続ける", items_path %></td>
          <td align="left">合計金額：<%= @sum %></td>
        </tr>
        <tr>
          <td><%= link_to "情報入力に進む", orders_new_path %></td>
        </tr>
      </table>
    </div>
  </div>
</div>